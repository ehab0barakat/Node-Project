<%- include('./include/header.ejs'); %>

    

    <!-- <h2 class="p-5">Update Profile</h2> -->
    <section class="vh-100 p-3" style="background-color: #eee;">
      <% products.forEach(function(result){ %>

        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
              <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
      
                      <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Update Profile</p>
      
                        <form id='edit' method='POST' action="/edit/<%= result.ID %>" >
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <input type="text" id="name" name="name" class="form-control" value='<%= result.name %>'/>
                            <label class="form-label" for="name">Your new Name</label>
                          </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <input id="email" name="email" class="form-control" value='<%= result.email %>' />
                            <label  class="form-label" for="email">Your new Email</label>
                          </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <input type="password" name="password" id="password" class="form-control" />
                            <label  class="form-label" for="password">new Password</label>
                          </div>
                        </div>
  
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                         
                          <button type="submit" class="btn btn-primary btn-lg">Update</button>

                        </div>
      
                      </form>
      
                    </div>
                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
      
                      <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                        class="img-fluid" alt="Sample image">
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </section>