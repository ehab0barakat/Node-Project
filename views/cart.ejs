<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="/style.css">
  <title>Document</title>
</head>
<%- include('./include/header.ejs'); %>
  <div class="container mt-5 ">
    <div class="row  ">
   
       <div class="col-sm-12">
        <h2 class="text-center mb-5"> Shopping Cart</h2>
   
       <table class="table" >
           <thead class="table-primary">
               <tr>
                   <th>#</th>
                   <th>Image</th>
                   <th>Product</th>
                   <th>Price</th>
                   <th>Remove</th>
   
               </tr>
             </thead>
            <tbody>
                
                    
                        <% products.forEach(function(results) { %>
                            
                            <tr>
                                
                            <td><%= results.ID %></td>
                            <td><img src="<%= results.image %>" width="50px" height="50px"  ></td> 
                            <td><%= results.name %> </td>
                            <td><%= results.price %> </td>
                           

                            <td>
                                 <a class="btn btn-danger" href="/remove_product/<%= results.ID %>" class="card-link"> Delete</a>
                              
                    
                            </td>
                            <% }) %>
                            

                            
                    </tr>
            </tbody>
             
   
       </table>


       </div>
       
       
       <div class="card col-sm-6 mt-5 " style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">CART TOTALS</h5>
          <p class="card-text">Total :<%= total %> $</p>

          <a href="/checkout" class="btn btn-primary">PROCEED TO CHECKOUT </a>
        </div>
       
      </div> 
    </div>
   
   </div>
  

  </div> 
  <%- include('./include/footer.ejs'); %>


  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
  <script src="../index.js"></script>

</body>
</html>
  






    