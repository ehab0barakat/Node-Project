<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" media="screen" href="css/main.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
  
  <%- include('./include/header.ejs'); %>
    
  <div class="container mt-5">
    <div class="row">
   
       <h2 class="title text-center"> Shopping Cart</h2>
   
       <table class="table" >
           <thead class="table-primary">
               <tr>
                   <th>#</th>
                   <th>Image</th>
                   <th>Product</th>
                   <th>Price</th>
                   <th>Total</th>
                   <th>Remove</th>
   
               </tr>
             </thead>
            <tbody>
                
                    
                        <% products.forEach(function(results) { %>
                            <tr>
                                <% var Total =0 %>
                            <td><%= results.ID %></td>
                            <td><img src="<%= results.image %>" width="50px" height="50px"  ></td> 
                            <td><%= results.name %> </td>
                            <td><%= results.price %> </td>
                            <td><%= Total+results.price %></td>
                           

                            <td>
                                 <a class="btn btn-danger" href="/remove_product/<%= results.ID %>" class="card-link"> Delete</a>
                              
                                
                                <!-- <form action="/remove_product" method="post">
                                    <input type="hidden" value="<%= results.ID %>" name="id">
                                    <button class="btn  btn-danger " type="submit"> Delete</button>
                                </form> -->
                            </td>
                            <% }) %>
                            

                            
                    </tr>
            </tbody>
             
   
       </table>



       <div >

        <table class="table table-condensed">
            <thead>

                <tr class="cart_menu">
                    <td>Total</td>
                    
                </tr>

            </thead>
            <tbody>
                <tr>
                    
                </tr>
            </tbody>
            
        </table>
       </div>
    </div>
   
   </div>
  

  </div> 



  


  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
  <script src="../index.js"></script>

</body>
</html> 






    